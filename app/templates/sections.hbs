{{page-title "Sections"}}
<div class="ui green segment">
  <span class="ui label">{{this.email}}</span>
  <button class="ui black button" {{action "logout"}}>
    Logout
  </button>
</div>
<div class="ui secondary menu">
  <div class="item">
    <h1>Store</h1>
  </div>
  <div class="right menu">
    <LinkTo class="ui button secondary" @route="board">Retour sur le tableau de bord</LinkTo>
  </div>
</div>
<fieldset class="ui segment"><legend>Gestion des sections</legend>
  <div class="ui container">
    <button class="ui green button" {{action "add"}}>Nouvelle section</button>
    <LinkTo @route="sections.addProduct" class="ui green button">Nouveau produit</LinkTo>
  </div>
  {{outlet}}
    <table class="ui table">
      {{#each @model as |sections|}}
        <tr>
          <td><strong>{{sections.name}}</strong><div style="font-size: smaller">{{sections.description}}</div></td>
          <td><a {{action "resetSect" sections.id}}  class="ui secondary button">Ã‰diter</a></td>
          <td><LinkTo @route="sections.delete" @model={{sections.id}} class="ui red button"><i class="trash icon"></i></LinkTo> </td>
        </tr>
        {{outlet sections.id}}
      {{/each}}
    </table>
</fieldset>
