{{page-title "Ex1"}}
<div class="card">
  <div class="card-header bg-primary text-light">Note</div>
  <div class="card-body">
    <Textarea
      class="form-control"
      @value={{this.content}}
      placeholder="Entrez votre texte"
      maxlength="100"
      {{on "keypress" this.update}}
    />
    <button class="btn btn-primary" {{action "save" this.content @model}}>Enregistrer</button>
    <button class="btn btn-primary" {{action "clear"}}>Effacer</button>

    <div class="alert alert-dismissible alert-info">Nombre de caract√®res restant: {{this.size}}</div>
    <div class="alert {{this.style}}">{{this.info}}</div>
  </div>
</div>
